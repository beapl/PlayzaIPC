<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Playza.Views.MiniJogo2"
             BackgroundImageSource="background.jpg"
             Title="Jogo Da DiferenÃ§a"
             NavigationPage.HasNavigationBar="False">

    <Grid Padding="20">

        <!-- Grid principal com 3 colunas -->
        <Grid ColumnDefinitions="*, Auto, *" RowDefinitions="*" >

            <!-- MaÃ§Ã£s Ã  esquerda -->
            <VerticalStackLayout x:Name="LeftStack"
                                 Grid.Column="0"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center" />

            <!-- Centro com texto e botÃµes -->
            <VerticalStackLayout Grid.Column="1" Spacing="30" VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="vs" FontSize="32" HorizontalOptions="Center" FontFamily="Delfino" />
                <Label Text="Escolhe o sÃ­mbolo correto!" FontSize="30" HorizontalOptions="Center" FontFamily="Delfino"/>
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                    <Button x:Name="GreaterButton" Text=">" Clicked="OnGreaterClicked" FontFamily="Delfino" FontSize="40"/>
                    <Button x:Name="EqualButton" Text="=" Clicked="OnEqualClicked" FontFamily="Delfino" FontSize="40"/>
                    <Button x:Name="LessButton" Text="&lt;" Clicked="OnLessClicked" FontFamily="Delfino" FontSize="40"/>
                </HorizontalStackLayout>
                <Label x:Name="ScoreLabel"
                       Text="PontuaÃ§Ã£o: 0"
                       FontSize="35"
                       HorizontalOptions="Center"
                       TextColor="Black"
                       FontFamily="Delfino"/>
                <Label x:Name="ResultLabel"
                       FontSize="45"
                       HorizontalOptions="Center"
                       TextColor="Black"
                       FontFamily="Delfino"/>
            </VerticalStackLayout>

            <!-- MaÃ§Ã£s Ã  direita -->
            <VerticalStackLayout x:Name="RightStack"
                                 Grid.Column="2"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center" />
        </Grid>

        <!-- BotÃ£o de pausa no canto superior esquerdo -->
        <Grid HorizontalOptions="Start" VerticalOptions="Start" Margin="10">
            <ImageButton x:Name="PauseButton"
                         Source="Resources/Images/pausa.png"
                         BackgroundColor="Transparent"
                         WidthRequest="50"
                         HeightRequest="50"
                         HorizontalOptions="Start"
                         VerticalOptions="Start"
                         Clicked="OnPauseClicked"/>
        </Grid>

        <!-- Overlay de pausa -->
        <Frame x:Name="PauseMenu"
               CornerRadius="20"
               Padding="20"
               BackgroundColor="#1D3557"
               IsVisible="False"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               HasShadow="True"
               ZIndex="20">

            <StackLayout Spacing="20" HorizontalOptions="Center">
                <Label Text="Em pausa"
                       FontSize="36"
                       FontFamily="Delfino"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Button Text="Retomar"
                        Clicked="OnResumeClicked"
                        BackgroundColor="#457B9D"
                        TextColor="White"
                        FontFamily="Delfino"
                        CornerRadius="20"
                        WidthRequest="200"/>
                <Button Text="Sair"
                        Clicked="OnExitClicked"
                        BackgroundColor="#E63946"
                        TextColor="White"
                        FontFamily="Delfino"
                        CornerRadius="20"
                        WidthRequest="200"/>
            </StackLayout>
        </Frame>

        <!-- Overlay do painel final -->
        <Frame x:Name="FinalOverlay"
       CornerRadius="20"
       Padding="20"
       BackgroundColor="#F1FAEE"
       IsVisible="False"
       VerticalOptions="Center"
       HorizontalOptions="Center"
       WidthRequest="320"
       HeightRequest="350"
       HasShadow="True"
       ZIndex="30">

            <!-- ScrollView envolve tudo dentro do Frame -->
            <ScrollView>
                <StackLayout Spacing="10">
                    <Label Text="ðŸ† Fim do Jogo!"
                   FontSize="30"
                   FontFamily="Delfino"
                   TextColor="#1D3557"
                   HorizontalOptions="Center"/>
                    <Label x:Name="FinalScoreLabel"
                   FontSize="24"
                   FontFamily="Delfino"
                   TextColor="#1D3557"
                   HorizontalOptions="Center"/>

                    <Label x:Name="HighScoresLabel"
                   FontSize="20"
                   FontFamily="Delfino"
                   TextColor="#1D3557"
                   Margin="0,10"/>

                    <Button x:Name="RestartButton"
                    Text="Jogar Novamente"
                    Clicked="OnRestartClicked"
                    BackgroundColor="#457B9D"
                    TextColor="White"
                    FontFamily="Delfino"
                    CornerRadius="20"/>

                    <Button x:Name="ClearButton"
                    Text="Limpar Highscores"
                    Clicked="OnClearHighScoresClicked"
                    BackgroundColor="#E63946"
                    TextColor="White"
                    FontFamily="Delfino"
                    CornerRadius="20"/>

                    <Button x:Name="ExitButton"
                    Text="Sair"
                    Clicked="OnExitClicked"
                    BackgroundColor="#457B9D"
                    TextColor="White"
                    FontFamily="Delfino"
                    CornerRadius="20"/>
                </StackLayout>
            </ScrollView>

        </Frame>


    </Grid>
</ContentPage>