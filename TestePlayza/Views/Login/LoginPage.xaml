<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Playza.Views.LoginPage"
    BackgroundImageSource="wallpaper.jpg"
    Title="Login">

    <Grid Padding="50"
          RowDefinitions="Auto,Auto,*,Auto"
          ColumnDefinitions="*">

    <!-- Título -->
    <Label Text="Olá de novo!"
               FontSize="60"
               HorizontalOptions="Center"
               TextColor="#9462fc"
               Grid.Row="0"
               Grid.Column="0"
               Margin="0,0,0,30"/>

    <!-- Retângulo com campos e checkbox -->
    <Frame BackgroundColor="#80FFFFFF"
               Padding="30"
               Margin="0"
               WidthRequest="900"
               CornerRadius="10"
               Grid.Row="1"
               HorizontalOptions="Center">

        <StackLayout Spacing="25">

            <Label Text="Digite a tua alcunha:"
                       FontSize="25"
                       TextColor="Black" />
            <Entry Placeholder="Alcunha"
                       FontSize="20"
                       BackgroundColor="White"
                       TextColor="Black" />

            <Label Text="Digite a sua palavra-passe:"
                       FontSize="25"
                       TextColor="Black" />
            <Entry Placeholder="Palavra-passe"
                       FontSize="20"
                       IsPassword="True"
                       BackgroundColor="White"
                       TextColor="Black" />
            
                <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Start">
                    <CheckBox x:Name="Manter"  />
                    <Label Text="Manter sessão iniciada"
                        VerticalOptions="Center"
                        FontSize="20"
                        HorizontalOptions="Start"
                        LineBreakMode="NoWrap" />
                </StackLayout>
            </StackLayout>
    </Frame>

    <!-- Botões -->
    <Grid Grid.Row="3"
              ColumnDefinitions="Auto,*,Auto"
              Margin="0,30,0,0">

        <Button Text="Voltar"
                    BackgroundColor="#4245aa"
                    TextColor="White"
                    FontSize="30"
                    HorizontalOptions="Start"
                    Grid.Column="0"
                    Clicked="OnLogoutClicked" />

        <Button Text="Entrar"
                    BackgroundColor="#4245aa"
                    TextColor="White"
                    FontSize="30"
                    Grid.Column="2"
                    HorizontalOptions="End"
                    Clicked="OnLoginClicked"/>
    </Grid>
</Grid>
</ContentPage>