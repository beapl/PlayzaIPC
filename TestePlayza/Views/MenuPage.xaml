<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Playza.Views.MenuPage"
    BackgroundImageSource="wallpaper.jpg"
    Title="MENU">

    <Grid>
        <!-- Imagem GRANDE no topo, por cima de tudo -->
        <Image Source="menu.png"
               HorizontalOptions="Start"
               VerticalOptions="Start"
               Margin="0,0,0,0"
               HeightRequest="200"
               WidthRequest="280"
               ZIndex="100"/>

        <!-- Layout principal -->
        <Grid RowDefinitions="*,*,*,*,Auto"
              ColumnDefinitions="*,*,*"
              Padding="50"
              RowSpacing="50">

            <Frame Grid.Row="2" Grid.ColumnSpan="3"
                   BackgroundColor="#B3FFFFFF"
                   CornerRadius="20"
                   Padding="5"
                   WidthRequest="900"
                   HeightRequest="440"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <Grid RowDefinitions="*, *" ColumnDefinitions="*,*,*,*,*"
                      ColumnSpacing="60">

                    <ImageButton Source="iconjornada.jpg"
                                 Grid.Row="0" Grid.Column="1"
                                 HeightRequest="300"
                                 WidthRequest="300"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Clicked="OnPlayClicked"/>

                    <ImageButton Source="iconminijogo.jpg" 
                                 Grid.Row="0" Grid.Column="3"
                                 HeightRequest="300"
                                 WidthRequest="300"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Clicked="OnMiniClicked"/>

                    <ImageButton Source="iconparental.jpg"
                                 Grid.Row="1" Grid.Column="1"
                                 HeightRequest="300"
                                 WidthRequest="300"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Clicked="OnParentalClicked"/>

                    <ImageButton Source="icondefinicoes.jpg"
                                 Grid.Row="1" Grid.Column="3"
                                 HeightRequest="300"
                                 WidthRequest="300"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Clicked="OnSettingsClicked"/>
                </Grid>
            </Frame>

            <!-- BotÃ£o Sair -->
            <Button Text="Sair" 
                    Grid.Row="4" Grid.Column="0"
                    HorizontalOptions="Start"
                    Clicked="OnLogoutClicked" 
                    FontFamily="Delfino"
                    BackgroundColor="#4245aa" 
                    TextColor="White"
                    FontSize="30"
                    WidthRequest="120"/>
        </Grid>
    </Grid>
</ContentPage>



