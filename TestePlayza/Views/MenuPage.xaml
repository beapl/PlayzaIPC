<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Playza.Views.MenuPage"
    BackgroundImageSource="wallpaper.jpg"
    Title="MENU">

    <Grid RowDefinitions="Auto,*,Auto,*,Auto"
      ColumnDefinitions="*,*,*"
      Padding="50"
      RowSpacing="20">

        <!-- Imagem do título -->
        <Image Source="menu.png"
           Grid.Row="0" Grid.ColumnSpan="3"
           HorizontalOptions="Start"
           VerticalOptions="Start"
           HeightRequest="150"
           Margin="0,0,0,0" 
           />


            <!-- Frame que engloba os ImageButtons principais -->
        <Frame Grid.Row="2" Grid.ColumnSpan="3"
               BackgroundColor="#B3FFFFFF"
               CornerRadius="20"
               Padding="10"
               Margin="0,0,0,0"
                WidthRequest="800"
                HeightRequest="430"
               HorizontalOptions="Center"
               VerticalOptions="Center">
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*,*,*"
                  RowSpacing="0" ColumnSpacing="10"
                  HorizontalOptions="Center">

                <!-- Canto superior esquerdo -->
                <ImageButton Source="iconjornada.jpg"
                             Grid.Row="0" Grid.Column="0"
                             Clicked="OnPlayClicked"
                             MaximumHeightRequest="200"
                             HorizontalOptions="Start"
                             VerticalOptions="Center"/>

                <!-- Canto superior direito -->
                <ImageButton Source="iconminijogo.jpg" 
                             Grid.Row="0" Grid.Column="3"
                             MaximumHeightRequest="200" 
                             HorizontalOptions="End"
                             VerticalOptions="Center"/>

                <!-- Canto inferior esquerdo -->
                <ImageButton Source="iconparental.jpg"
                             Grid.Row="1" Grid.Column="0"
                             Clicked="OnParentalClicked" 
                             MaximumHeightRequest="200"
                             HorizontalOptions="Start"
                             VerticalOptions="Center"/>

                <!-- Canto inferior direito -->
                <ImageButton Source="icondefinicoes.jpg"
                             Grid.Row="1" Grid.Column="3"
                             Clicked="OnSettingsClicked"
                             MaximumHeightRequest="200"
                             HorizontalOptions="End"
                             VerticalOptions="Center"/>
            </Grid>
        </Frame>

        <!-- Botão Sair no canto inferior esquerdo -->
        <Button Text="Sair" 
                Grid.Row="4" Grid.Column="0"
                HorizontalOptions="Start"
                Clicked="OnLogoutClicked" 
                FontFamily="Delfino"
                BackgroundColor="#4245aa" 
                TextColor="White"
                FontSize="30"
                WidthRequest="120"/>
    </Grid>
</ContentPage>


