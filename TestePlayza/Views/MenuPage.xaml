<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Playza.Views.MenuPage"
    BackgroundImageSource="wallpaper.jpg"
    Title="Menu">

    <StackLayout Padding="10" Spacing="10" VerticalOptions="Center">
        <ImageButton Source="iconjornada.jpg" Clicked="OnPlayClicked" MaximumHeightRequest="200"  />
        <ImageButton Source="iconminijogo.jpg" MaximumHeightRequest="200"/>
        <ImageButton Source="iconparental.jpg" MaximumHeightRequest="200"/>
        <ImageButton Source="icondefinicoes.jpg" Clicked="OnSettingsClicked" MaximumHeightRequest="200"  />
        <Button Text="Sair" Clicked="OnLogoutClicked" BackgroundColor="#F87171" TextColor="White"/>
    </StackLayout>

</ContentPage>
