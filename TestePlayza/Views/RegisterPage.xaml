<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Playza.Views.RegisterPage"
    BackgroundColor="#FEF9C3"
    Title="Criar Conta">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Entry Placeholder="Nome de utilizador"/>
        <Entry Placeholder="Email"/>
        <Entry Placeholder="Palavra-passe" IsPassword="True"/>
        <Button Text="Criar Conta" Clicked="OnRegisterClicked" BackgroundColor="#FACC15" TextColor="Black"/>
    </StackLayout>

</ContentPage>
