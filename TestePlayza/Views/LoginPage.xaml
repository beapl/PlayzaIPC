<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Playza.Views.LoginPage"
    BackgroundImageSource="wallpaper.jpg"
        
    Title="Login">

	<StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
		<Label Text="Nome do utilizador:"
        FontSize="50"
        HorizontalOptions="Center"
        TextColor="#9462fc" />
		<Entry Placeholder="Nome do utilizador"/>
		<Label Text="Palavra-passe:"
        FontSize="50"
        HorizontalOptions="Center"
        TextColor="#9462fc" />
		<Entry Placeholder="Palavra-passe" IsPassword="True"/>
		<Button Text="Entrar" Clicked="OnLoginClicked" BackgroundColor="#4245aa" TextColor="White"/>
	</StackLayout>

</ContentPage>
