<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Playza.Views.LoginPage"
    BackgroundColor="#E0F2FE"
    Title="Login">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Entry Placeholder="Nome de utilizador"/>
        <Entry Placeholder="Palavra-passe" IsPassword="True"/>
        <Button Text="Entrar" Clicked="OnLoginClicked" BackgroundColor="#0284C7" TextColor="White"/>
    </StackLayout>

</ContentPage>
