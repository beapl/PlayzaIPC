<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Playza.Views.Register1Page"
    BackgroundImageSource="wallpaper.jpg"
    Title="Qual é a disciplina que achas mais difícil?">

    <Grid RowDefinitions="Auto,*,Auto"
          ColumnDefinitions="*,*"
          Padding="20">

        <!-- Pergunta -->
        <Label Text="Qual é a disciplina que achas mais difícil?"
               FontSize="24"
               Grid.ColumnSpan="2"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

        <!-- Checkboxes lado esquerdo -->
        <StackLayout Grid.Row="1" Grid.Column="0" Spacing="20">
            <CheckBox x:Name="PortuguesCheck" />
            <Label Text="Português" />

            <CheckBox x:Name="MatematicaCheck" />
            <Label Text="Matemática" />

            <CheckBox x:Name="EstudoCheck" />
            <Label Text="Estudo do Meio" />
        </StackLayout>

        <!-- Checkboxes lado direito -->
        <StackLayout Grid.Row="1" Grid.Column="1" Spacing="20">
            <CheckBox x:Name="ArtisticaCheck" />
            <Label Text="Educação Artística" />

            <CheckBox x:Name="InglesCheck" />
            <Label Text="Inglês" />

            <CheckBox x:Name="NenhumaCheck" />
            <Label Text="Nenhuma!" />
        </StackLayout>

        <!-- Botão Voltar -->
        <Button Text="Voltar"
                Grid.Row="2" Grid.Column="0"
                HorizontalOptions="Start"
                Clicked="OnLogoutClicked"
                BackgroundColor="#4245aa"
                TextColor="White"
                WidthRequest="120" />

        <!-- Botão Seguinte -->
        <Button Text="Seguinte"
                Grid.Row="2" Grid.Column="1"
                HorizontalOptions="End"
                Clicked="OnRegisterClicked"
                BackgroundColor="#4245aa"
                TextColor="White"
                WidthRequest="120" />
    </Grid>
</ContentPage>
