<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Playza.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Playza.Views">

    <!--Só para poder programar as outras views-->
    <TabBar>
        <!-- <ShellContent Title="Início" ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" /> -->
        <ShellContent Title="Login" ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage"/>
        <ShellContent Title="Criar Conta" ContentTemplate="{DataTemplate views:RegisterPage}" Route="RegisterPage" />
        <ShellContent Title="Menu" ContentTemplate="{DataTemplate views:MenuPage}" />
        <ShellContent Title="Definições" ContentTemplate="{DataTemplate views:SettingsPage}" Route="SettingsPage" />
        <ShellContent Title="Jogo" ContentTemplate="{DataTemplate views:GamePage}" Route="GamePage" />
        <ShellContent Title="Mini-jogos" ContentTemplate="{DataTemplate views:MiniGamesPage}" Route="MiniGamesPage" />

    </TabBar>
    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate views:MainPage}" />
</Shell>

