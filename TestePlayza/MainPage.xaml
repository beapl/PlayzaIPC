<ContentPage
    x:Class="Playza.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundImageSource="wallpaper.jpg"

    Title="Bem-vindo!">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        <Label Text="Bem-vindo ao Playza!!!"
               FontSize="50"
               HorizontalOptions="Center"
               TextColor="#9462fc" />
        <Button Text="Iniciar Sessão" 
                BackgroundColor="#4245aa"
                TextColor="White"
                FontSize="30"
                Clicked="OnLoginClicked"/>
        <Button Text="Criar Conta"
                BackgroundColor="#4245aa"
                TextColor="White"
                FontSize="30"
                Clicked="OnRegisterClicked"/>
        <Button Text="Sair"
                BackgroundColor="#4245aa"
                TextColor="White"
                FontSize="30" />
        <!-- Provavelmente adicionar Clicked="OnLeaveClicked"/> -->
    </StackLayout>
</ContentPage>

